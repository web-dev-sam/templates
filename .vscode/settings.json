{
  "editor.codeActionsOnSave": {
    "source.fixAll.ts": "always",
    "source.organizeImports": "always",
    "source.sortImports": "always"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.indentSize": 2,
  "editor.tabSize": 2,
  "files.associations": { "*.css": "tailwindcss" }
}
